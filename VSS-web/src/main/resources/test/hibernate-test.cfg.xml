<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/videostoredb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">vsadmin</property>
    <property name="hibernate.connection.password">vsadmin</property>
    <mapping class="com.team33.entities.Account"/>
    <mapping class="com.team33.entities.Genre"/>
    <mapping class="com.team33.entities.Invoice"/>
    <mapping class="com.team33.entities.InvoicePK"/>
    <mapping class="com.team33.entities.LoginToken"/>
    <mapping class="com.team33.entities.LoginTokenPK"/>
    <mapping class="com.team33.entities.Orders"/>
    <mapping class="com.team33.entities.OrdersPK"/>
    <mapping class="com.team33.entities.Purchase"/>
    <mapping class="com.team33.entities.PurchasePK"/>
    <mapping class="com.team33.entities.Rental"/>
    <mapping class="com.team33.entities.RentalPK"/>
    <mapping class="com.team33.entities.ScreenRating"/>
    <mapping class="com.team33.entities.VideoInfo"/>
  </session-factory>
</hibernate-configuration>
